<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffd700">


    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_alignParentTop="true"
        android:layout_marginTop="49dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="398dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:max="20000"
        android:indeterminate="false"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0F"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200F"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/seekBar"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Fahrenheit"
        android:id="@+id/fah"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginTop="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Celsius"
        android:id="@+id/cel"
        android:layout_below="@+id/fah"
        android:layout_alignStart="@+id/fah"
        android:layout_marginTop="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/fahView"
        android:layout_alignTop="@+id/fah"
        android:layout_alignEnd="@+id/textView2"
        android:layout_toEndOf="@+id/fah"
        android:layout_marginStart="142dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/celView"
        android:layout_alignTop="@+id/cel"
        android:layout_alignStart="@+id/fahView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tempDetail"
        android:layout_marginTop="18dp"
        android:layout_alignStart="@+id/cel"
        android:layout_alignEnd="@+id/celView"
        android:layout_marginBottom="194dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/cel"
        android:gravity="center"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tempImage"
        android:layout_alignStart="@+id/tempDetail"
        android:layout_alignEnd="@+id/textView2"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/tempDetail" />


</RelativeLayout>
